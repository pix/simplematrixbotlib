{
	"name": "simplematrixbotlib",
	"image": "mcr.microsoft.com/devcontainers/base:bookworm",
    "postCreateCommand": "apt-get update && apt-get install -y python3-poetry",
	"remoteUser": "root",
	"mounts": [
		"type=bind,source=${localEnv:HOME}/.ssh,target=/root/.ssh/known_hosts",
    	"type=bind,source=${localEnv:HOME}/.ssh,target=/root/.ssh,readonly"
	]
}
